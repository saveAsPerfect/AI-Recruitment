# Required
OPENAI_API_KEY=..

# Optional overrides
OPENAI_MODEL=gpt-4o-mini
OPENAI_PARSE_MODEL=gpt-4o-mini

# Elasticsearch (auto-configured in Docker)
ES_HOST=http://elasticsearch:9200

# Matching tuning
BM25_CANDIDATES=20      # pre-filter size before LLM
BM25_WEIGHT=0.5
DENSE_WEIGHT=0.5

# Logging
LOG_LEVEL=INFO

# Inbound email (IMAP)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=cv@company.com
IMAP_PASSWORD=app-password
IMAP_FOLDER=INBOX
IMAP_USE_SSL=true
IMAP_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt
