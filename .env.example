# ─── LLM Provider ──────────────────────────────────────────────────────────
# Required: your LLM API key
OPENAI_API_KEY=sk-...

# Model settings (defaults are for OpenAI; adjust for Groq / Ollama)
OPENAI_MODEL=gpt-4o-mini
OPENAI_PARSE_MODEL=gpt-4o-mini
# Uncomment below for Groq:
# OPENAI_MODEL=llama-3.3-70b-versatile
# OPENAI_PARSE_MODEL=llama-3.3-70b-versatile
# OPENAI_BASE_URL=https://api.groq.com/openai/v1

# ─── Elasticsearch ─────────────────────────────────────────────────────────
# Local development: http://localhost:9200
# Docker Compose: set automatically via docker-compose.yml (http://elasticsearch:9200)
ES_HOST=http://localhost:9200

# ─── Matching tuning ──────────────────────────────────────────────────────
BM25_CANDIDATES=20       # pre-filter size before LLM
BM25_WEIGHT=0.5
DENSE_WEIGHT=0.5

# ─── Logging ──────────────────────────────────────────────────────────────
LOG_LEVEL=INFO

# ─── Inbound email (IMAP) ────────────────────────────────────────────────
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=cv@company.com
IMAP_PASSWORD=app-password
IMAP_FOLDER=INBOX
IMAP_USE_SSL=true
IMAP_ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt
# Max attachment size in bytes (default 10 MB)
IMAP_MAX_ATTACHMENT_BYTES=10485760

# ─── Email scheduler ─────────────────────────────────────────────────────
EMAIL_SCHEDULER_ENABLED=true
EMAIL_SCHEDULER_INTERVAL_MINUTES=60
EMAIL_SCHEDULER_STARTUP_DELAY_SECONDS=15
EMAIL_SCHEDULER_MAX_MESSAGES=50
