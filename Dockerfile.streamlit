FROM python:3.11-slim

WORKDIR /app

RUN pip install --no-cache-dir streamlit==1.36.0 plotly==5.22.0 pandas==2.2.2 requests==2.32.3

COPY streamlit_app.py .

EXPOSE 8501

CMD ["streamlit", "run", "streamlit_app.py", \
     "--server.port=8501", \
     "--server.address=0.0.0.0", \
     "--server.headless=true"]
